{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "wasm to wat",
      "detail": "",
      "type": "shell",
      "command": "wasm2wat",
      "args": [
        "${file}",
        "-o",
        "contract/token/${fileBasename}.wat",
        "--generate-names",
        "--enable-function-references"
      ]
    },
    {
      "label": "traspiler",
      "detail": "traspiler",
      "type": "shell",
      "command": "transpiler/transpiler",
      "args": [
        "--config",
